<Window x:Class="ProjectMyShop.Views.AddQuantityScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMyShop.Views"
        mc:Ignorable="d"
        Title="AddQuantityScreen" Height="100" Width="400">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock Text="Quantity" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center" Margin="20 0 20 0"/>
        <TextBox Width="150" Height="30" FontSize="15" Name="QuantityBox" Text="{Binding Quantity}"/>
        <Button Width="100" Height="30" Name="addButton" Content="Add Quantity" Click="addButton_Click" Margin="20 0 0 0"/>
    </StackPanel>
</Window>
